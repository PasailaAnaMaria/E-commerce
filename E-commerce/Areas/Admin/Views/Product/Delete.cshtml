@{
}
@model Product
<form method="post">
    <input asp-for="Id" hidden /> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        @*   <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 row">
            <label asp-for="Title" disabled class="p-0"></label>
            <input class="form-control" asp-for="Title" />
           
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" disabled class="p-0"></label>
            <input class="form-control" asp-for="Description" />
           
        </div>
        <div class="mb-3 row">
            <label asp-for="Author" disabledclass="p-0"></label>
            <input class="form-control" asp-for="Author" />
          
        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN" disabled class="p-0"></label>
            <input class="form-control" asp-for="ISBN" />
            
        </div>
        <div class="mb-3 row">
            <label asp-for="ListPrice" disabled class="p-0"></label>
            <input class="form-control" asp-for="ListPrice" />
           
        </div>
        <div class="mb-3 row">
            <label asp-for="Price" disabled class="p-0"></label>
            <input class="form-control" asp-for="Price" />
           
        </div>
        <div class="mb-3 row">
            <label asp-for="Price50" disabled class="p-0"></label>
            <input class="form-control" asp-for="Price50" />
          
        </div>
        <div class="mb-3 row">
            <label asp-for="Price100" disabled class="p-0"></label>
            <input class="form-control" asp-for="Price100" />
          
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
            </div>
        </div>


    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}